set -eou pipefail

SYS_DIR='/usr/share/remarkable'
CONF_DIR="${REMARKABLE_UTILS_DOTDIR:="$HOME/.remarkable-utils"}/splash"
BACKUP_DIR="$CONF_DIR/backup"

backup() {
	cp -a "$SYS_DIR"/*.png "$BACKUP_DIR"
}

restore() {
	cp -a -f "$BACKUP_DIR"/*.png "$SYS_DIR"
}

write() {
	for splash in "$CONF_DIR"/*.png; do
		splash="${splash##*/}"
		printf '%s...' "$splash"

		if [ ! -f "$BACKUP_DIR/$splash" ]; then
			echo 'NOT FOUND'
			continue
		fi

		if cmp -s "$CONF_DIR/$splash" "$SYS_DIR/$splash"; then
			echo 'SKIPPING'
			continue
		fi

		cp -a -f "$CONF_DIR/$splash" "$SYS_DIR"
		echo 'OK'
	done
}

if [ ! -d "$BACKUP_DIR" ]; then
	printf 'No backup found, creating a backup...'
	mkdir -p "$BACKUP_DIR"
	backup
	echo 'OK'
fi

for arg in "$@"; do
	case $arg in
	-r | --restore)
		printf 'Restoring splash screens from backup...'
		restore
		echo 'OK'
		exit
		;;
	-w | --write)
		echo 'Writing custom splash screens...'
		write
		echo 'DONE'
		exit
		;;
	esac
done
